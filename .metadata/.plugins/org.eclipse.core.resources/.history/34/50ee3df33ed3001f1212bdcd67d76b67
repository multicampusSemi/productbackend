<mapper namespace="com.project.mapper.krhProductMapper">
	<select id="findAll" resultType="com.project.model.KrhProduct">
		SELECT * FROM products ORDER BY created_at DESC
	</select>
	
	<select id="productPageSearch" resultType="com.project.model.KrhProduct">
		SELECT * FROM products where id=#{id}
	</select>
	
	//검색
	<select id="getProductsByCateogry" resultType="com.project.model.krhProduct">
		select * from products where category=#{category}
	</select>
	
