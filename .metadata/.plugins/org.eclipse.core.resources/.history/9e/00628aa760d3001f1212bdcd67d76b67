.left-item {
    position: relative;
  }
  
.product-category {
    display: none; /* 기본적으로 숨김 처리 */
    position: absolute;
    top: 30;  /* 부모 li 바로 아래에 위치 */
    left: 0;
    background-color: rgba(113, 103, 126, 0.753);
    list-style-type: none;
    padding: 10px;
    margin: 0;
    width: 1500px;
    box-sizing: border-box;
    opacity: 0; /* 초기에는 투명하게 설정 */
    pointer-events: none; /* 메뉴가 나타나지 않으면 클릭도 불가능 */
    overflow: hidden; /* 넘치는 부분 숨기기 */
    transition: max-height 0.4s ease, opacity 0.4s ease, transform 0.3s ease; /* 부드러운 애니메이션 */
    transform: translateY(10px); /* 처음에는 살짝 아래로 위치 */
    z-index: -1; /* 기본 상태에서는 다른 메뉴들 아래에 위치 */
  }
  .product-category li{
    padding:20px;
  }
  .product-category li:hover{
    text-decoration: underline;
    font-weight: bold;
    background-color: rgba(255, 255, 255, 0.616);
  }
  
  /* hover 시 세부 메뉴가 보이게 */
.left-item:hover .product-category {
    display: block;  /* display를 block으로 변경 */
    opacity: 1; /* 불투명하게 설정하여 보이게 함 */
    pointer-events: auto; /* 메뉴가 보이면 클릭 가능 */
    max-height: 500px; /* 서브 메뉴 크기를 키워줌 (너무 길어지지 않게 조정 가능) */
    transform: translateY(0); /* 서브 메뉴가 부드럽게 위로 올라오도록 */
    z-index: 1; /* 다른 메뉴 항목들 위로 올려줌 */
  }

